<!doctype html>

<html>
<head>
	<title>Login Page</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/introHCI.css" rel="stylesheet">
	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/parking.js"></script>
</head>
<body class="screen">

  	<!-- Page Header -->
	<div class="header">
		<h2>LOGIN via TritonLink</h2>
	</div>	
	
	<!-- Login and Password Fields + Login Button -->
	<div class="container">


    	<label for="username"><b>Username</b></label>
    	<input type="text" placeholder="Enter Username" name="username" required>

    	<p> <br/> </p>

    	<label for="password"><b>Password</b></label>
    	<input type="password" placeholder="Enter Password" name="password" required>

    	<p></p>

    	<!-- Need to add functionality to remember users, if possible -->
    	<font size="-1">
    	<label>
      		<input type="checkbox" checked="unchecked" name="remember"> Remember me
    	</label>
    	</font>

    	<br/>
    	<br/>
    	<br/>
    				
    	<p class="FBLogin">or login with Facebook<br/>
			<fb:login-button scope="public_profile, email" onlogin="checkLoginState();"></fb:login-button>
		</p>

    </div>

    <button class="block" id="loginButton" onclick="window.location.href = 'permit';"> LOGIN</button>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>

	{{> facebook}}
	<script src="/js/facebook.js"></script>

</body>
</html>